<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/table"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="11" />

        <RelativeLayout
            android:id="@+id/player0_container"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="11" >

            <ImageView
                android:id="@+id/player0"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:contentDescription="@string/description"
                android:src="@drawable/empty_seat" />
        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="11" />

        <RelativeLayout
            android:id="@+id/player1_container"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="11" >

            <ImageView
                android:id="@+id/player1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:contentDescription="@string/description"
                android:src="@drawable/empty_seat" />
        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="11" />

        <RelativeLayout
            android:id="@+id/player2_container"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="11" >

            <ImageView
                android:id="@+id/player2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:contentDescription="@string/description"
                android:src="@drawable/empty_seat" />
        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="11" />

        <RelativeLayout
            android:id="@+id/player3_container"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="11" >

            <ImageView
                android:id="@+id/player3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:contentDescription="@string/description"
                android:src="@drawable/empty_seat" />
        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="11" />
    </LinearLayout>

    <TextView
        android:id="@+id/serverLog"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="60"
        android:scrollbars="vertical"
        tools:context=".ServerTableActivity" />

    <LinearLayout
        android:layout_weight="20"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="11" />

        <RelativeLayout
            android:id="@+id/player7_container"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="11" >

            <ImageView
                android:id="@+id/player7"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:contentDescription="@string/description"
                android:src="@drawable/empty_seat" />
        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="11" />

        <RelativeLayout
            android:id="@+id/player6_container"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="11" >

            <ImageView
                android:id="@+id/player6"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:contentDescription="@string/description"
                android:src="@drawable/empty_seat" />
        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="11" />

        <RelativeLayout
            android:id="@+id/player5_container"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="11" >

            <ImageView
                android:id="@+id/player5"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:contentDescription="@string/description"
                android:src="@drawable/empty_seat" />
        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="11" />

        <RelativeLayout
            android:id="@+id/player4_container"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="11" >

            <ImageView
                android:id="@+id/player4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:contentDescription="@string/description"
                android:src="@drawable/empty_seat" />
        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="11" />
    </LinearLayout>

</LinearLayout>