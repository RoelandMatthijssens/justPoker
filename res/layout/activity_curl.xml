<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <fi.harism.curl.CurlView
        android:id="@+id/curl"
        android:layout_width="83dp"
        android:layout_height="125dp" />

    <Button
        android:id="@+id/fade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="68dp"
        android:layout_toRightOf="@+id/curl"
        android:onClick="fadeBackground"
        android:text="fade" />

    <Button
        android:id="@+id/vibrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/fade"
        android:layout_below="@+id/fade"
        android:layout_marginTop="17dp"
        android:onClick="createVibrate"
        android:text="vibrate" />

    <Button
        android:id="@+id/btnSpeak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/vibrate"
        android:layout_below="@+id/vibrate"
        android:onClick="speak"
        android:text="Speak" />

</RelativeLayout>
